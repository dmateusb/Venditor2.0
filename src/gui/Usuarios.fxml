      <VBox alignment="TOP_CENTER" prefHeight="720.0" prefWidth="1020.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="USUARIOS" wrappingWidth="185.51953125">
